<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke android:color="#6200EA" android:width="2dp" />
        </shape>
    </item>
    <!-- Custom dropdown arrow -->
    <item
        android:drawable="@drawable/solid_purple_arrow"
        android:gravity="end|center_vertical"> <!-- Adjust gravity to shift the arrow to the left -->
    </item>
</layer-list>